<div class="banner" style="background-image: url('https://source.unsplash.com/random');">
</div>
<div class="container">
  <div class="card">
    <h1><%= @flat.name %></h1>
    <p><%= @flat.address %></p>
  </div>
  <div class="card">
    <h2>A bit more about this flat...</h2>
    <p><%= @flat.description %></p>
  </div>
  <div class="card">
    <h2>Details</h2>
    <div class="d-flex justify-content-around">
      <p><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
      <p><i class="fas fa-user-friends"></i> <%= @flat.price_per_night %></p>
    </div>
  </div>
  <%= link_to "Edit Flat", edit_flat_path(@flat) %>
  <%= link_to "Delete Flat", flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" } %>

</div>
